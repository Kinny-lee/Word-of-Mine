Day N --learn Arduino_Servo    Feb.19th


#include <Servo.h>    // create Servo object to control a servo

Servo myservoï¼›

const servoPin = 2 ï¼›     // attaches the servo on pin 2 to the Servo object

void setup(){
  myservo.attach(servoPin);
}

int angle = 0ï¼› // variable to store the servo position
int delayTime = 100ï¼›
void loop(){
  for(angle=0; angle <= 180; angle += 45){
    myservo.write(angle);    // tell servo to go to position in variable 'angle'
    delay(delayTime);
  }
}
